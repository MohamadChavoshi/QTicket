<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <ImageView
        android:id="@+id/backBtnSignup"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_ion_arrow_back_circle_sharp" />


    <TextView
        android:id="@+id/Signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/VioletNormal"
        android:textSize="24sp"
        app:fontFamily="@font/sourcesansproregular" />


    <carbon.widget.EditText
        android:id="@+id/fullname_signup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/Signup"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/login_input"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:elevation="16dp"
        android:hint="Fullname"
        android:inputType="text"
        android:maxLength="40"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="17dp"
        android:paddingBottom="6dp"
        android:textColor="@color/GreyNormal"
        android:textColorHint="#40252525"
        android:textSize="14sp"
        android:textStyle="normal"
        app:carbon_elevationShadowColor="@color/VioletNormalActive"
        app:fontFamily="@font/sourcesansproregular" />

    <carbon.widget.EditText
        android:id="@+id/username_signup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/fullname_signup"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/login_input"
        android:drawableStart="@drawable/ic_round_email"
        android:drawablePadding="10dp"
        android:elevation="16dp"
        android:hint="Email Or Username"
        android:inputType="text"
        android:maxLength="40"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="17dp"
        android:paddingBottom="6dp"
        android:textColor="@color/GreyNormal"
        android:textColorHint="#40252525"
        android:textSize="14sp"
        android:textStyle="normal"
        app:carbon_elevationShadowColor="@color/VioletNormalActive"
        app:fontFamily="@font/sourcesansproregular" />

    <carbon.widget.EditText
        android:id="@+id/password_signup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/username_signup"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/login_input"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:elevation="16dp"
        android:hint="Password"
        android:inputType="text"
        android:maxLength="40"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="17dp"
        android:paddingBottom="6dp"
        android:textColor="@color/GreyNormal"
        android:textColorHint="#40252525"
        android:textSize="14sp"
        android:textStyle="normal"
        app:carbon_elevationShadowColor="@color/VioletNormalActive"
        app:fontFamily="@font/sourcesansproregular" />

    <carbon.widget.EditText
        android:id="@+id/password_confirm_signup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/password_signup"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/login_input"
        android:drawableStart="@drawable/ic_password_check"
        android:drawablePadding="10dp"
        android:elevation="16dp"
        android:hint="Confirm Password"
        android:inputType="text"
        android:maxLength="40"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:paddingEnd="17dp"
        android:paddingBottom="6dp"
        android:textColor="@color/GreyNormal"
        android:textColorHint="#40252525"
        android:textSize="14sp"
        android:textStyle="normal"
        app:carbon_elevationShadowColor="@color/VioletNormalActive"
        app:fontFamily="@font/sourcesansproregular" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="453dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/TermAcceptBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:thumb="@drawable/ic_thumb"
            android:track="@drawable/switch_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TermText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:alpha="0.7"
            android:text="By Clicking This Button You Will Agree To All Of Our"
            android:textColor="@color/VioletNormal"
            android:textSize="13sp"
            app:fontFamily="@font/sourcesansproregular"
            app:layout_constraintStart_toEndOf="@+id/TermAcceptBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TermBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:alpha="0.7"
            android:text="Terms Of Use"
            android:textColor="@color/YellowNormal"
            android:textSize="14sp"
            app:fontFamily="@font/sourcesansproregular"
            app:layout_constraintStart_toEndOf="@+id/TermAcceptBtn"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/SignupBtn"
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="509dp"
        android:alpha="0.3"
        android:background="@drawable/login_btn"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/YellowNormal"
        android:textSize="16sp"
        app:fontFamily="@font/sourcesansproregular" />





</RelativeLayout>